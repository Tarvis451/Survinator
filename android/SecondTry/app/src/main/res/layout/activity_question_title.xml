<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lappy.secondtry.QuestionTitleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter the title of your question"
        android:id="@+id/directionsTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/mcQuestionTitleText"
        android:layout_below="@+id/directionsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/directionsTextView"
        android:layout_alignEnd="@+id/directionsTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button12"
        android:layout_marginBottom="149dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button13"
        android:layout_alignStart="@+id/button13"
        android:onClick="saveTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discard"
        android:id="@+id/button13"
        android:layout_marginTop="63dp"
        android:layout_alignTop="@+id/button12"
        android:layout_centerHorizontal="true"
        android:onClick="discard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/questionTitleErrorTextview"
        android:textColor="#ffff0000"
        android:textAlignment="center"
        android:editable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Let&apos;s hope an error doesn&apos;t appear here." />
</RelativeLayout>
